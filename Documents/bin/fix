#!/usr/bin/env bash
# https://www.gnu.org/software/bash/manual/html_node/index.html

# Template based on the one provided by Thibaut Rousseau
# from https://dev.to/thiht/shell-scripts-matter
set -euo pipefail
IFS=$'\n\t'

LOG_FILE="/tmp/$(basename "$0").log"
readonly LOG_FILE
info() { echo "[INFO]    $*" | tee -a "$LOG_FILE" >&2; }
warning() { echo "[WARNING] $*" | tee -a "$LOG_FILE" >&2; }
error() { echo "[ERROR]   $*" | tee -a "$LOG_FILE" >&2; }
fatal() {
  echo "[FATAL]   $*" | tee -a "$LOG_FILE" >&2
  exit 1
}

USAGE="Usage:  ${CMD:=${0##*/}} [(-v|--verbose)] [--name=TEXT] [(-o|--output) FILE] [ARGS...]"
#/ Description:
#/ Examples:
#/ Options:
#/   steam
#/   audio
#/   nix
#/   -h, --help: Display this help message
help() {
  echo "$USAGE"
  grep '^#/' "$0" | cut -c4-
  exit 0
}
exit2() {
  printf >&2 "%s:  %s: '%s'\n%s\n" "$CMD" "$1" "$2" "$USAGE"
  exit 2
}

set -- "$@" "${EOL:=$(printf '\1\3\3\7')}" # end-of-list marker
while [ "$1" != "$EOL" ]; do
  opt="$1"
  shift
  case "$opt" in

  steam)
    pgrep steam | xargs kill -9
    ;;
  nix)
    \sudo nix-store --verify --check-contents --repair
    ;;
  audio)
    systemctl --user restart pipewire pipewire-pulse wireplumber bluetooth.target
    ;;
  -h | --help)
    printf "%s\n" "$USAGE"
    exit 0
    ;;

  # process special cases
  --) while [ "$1" != "$EOL" ]; do
    set -- "$@" "$1"
    shift
  done ;;                                                          # parse remaining as positional
  --[!=]*=*) set -- "${opt%%=*}" "${opt#*=}" "$@" ;;               # "--opt=arg"  ->  "--opt" "arg"
  -[A-Za-z0-9] | -*[!A-Za-z0-9]*) exit2 "invalid option" "$opt" ;; # anything invalid like '-*'
  -?*)
    other="${opt#-?}"
    set -- "${opt%"$other"}" "-${other}" "$@"
    ;;                     # "-abc"  ->  "-a" "-bc"
  *) set -- "$@" "$opt" ;; # positional, rotate to the end
  esac
done
shift
